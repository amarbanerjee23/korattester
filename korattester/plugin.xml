<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin
   id="com.scully.korat"
   name="Korat Plug-in"
   version="0.0.3"
   provider-name="Matt Scully"
   class="com.scully.korat.KoratPlugin">

   <runtime>
      <library name="korat.jar">
         <export name="*"/>
      </library>
      <library name="lib/commons-lang-2.1.jar">
         <export name="*"/>
      </library>
      <library name="lib/commons-collections-3.2.jar">
         <export name="*"/>
      </library>
      <library name="lib/commons-digester-1.7.jar">
         <export name="*"/>
      </library>
      <library name="lib/commons-logging-1.1.jar">
         <export name="*"/>
      </library>
      <library name="lib/commons-beanutils.jar">
         <export name="*"/>
      </library>
      <library name="lib/commons-betwixt-20060810.jar">
         <export name="*"/>
      </library>
      <library name="lib/javassist-3.4.jar">
         <export name="*"/>
      </library>
   </runtime>

   <requires>
      <import plugin="org.eclipse.ui"/>
      <import plugin="org.eclipse.core.runtime"/>
      <import plugin="org.eclipse.jdt.core"/>
      <import plugin="org.eclipse.core.resources"/>
      <import plugin="org.eclipse.ui.ide"/>
   </requires>
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            adaptable="true"
            id="com.scully.korat.contribution.context.type"
            objectClass="org.eclipse.jdt.core.IType">
         <menu
               label="&amp;Korat"
               path="additions"
               id="com.scully.korat.popup.menu1">
            <separator name="slot1" />
         </menu>
         <action
               enablesFor="1"
               label="&amp;Create State Space"
               class="com.scully.korat.popup.actions.GenerateFinitization"
               style="push"
               menubarPath="com.scully.korat.popup.menu1/slot1"
               id="com.scully.korat.createss">
         </action>
      </objectContribution>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <category
            id="com.scully.korat"
            name="Korat"/>
      <wizard
            category="com.scully.korat"
            class="com.scully.korat.wizards.StateSpaceWizard"
            hasPages="true"
            icon="icons/sample.gif"
            id="com.scully.korat.wizards.StateSpaceWizard"
            name="New State Space Wizard"
            project="false"/>
   </extension>


</plugin>
